<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/easy_reference_red</item>
        <item name="android:colorPrimaryDark">@color/dark_red</item>
        <item name="android:colorAccent">@color/easy_reference_red</item>

        <!--&lt;!&ndash; re enable when you have an actual test device-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!--&ndash;&gt;-->
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/red_circle_ripple</item>
        <item name="android:stateListAnimator">@anim/fab_state_list_animator</item>
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
    </style>
</resources>