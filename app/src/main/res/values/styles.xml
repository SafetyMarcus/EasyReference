<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/red_circle_ripple</item>
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="FloatingActionButton.Mini">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">14dp</item>
    </style>
</resources>
