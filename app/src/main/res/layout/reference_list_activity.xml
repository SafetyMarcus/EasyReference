<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clipToPadding="false"
                android:clipChildren="false">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="32sp"
            android:padding="8dp"
            android:hint="@string/title_hint"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <com.twotoasters.jazzylistview.JazzyListView
        android:layout_below="@id/container"
        android:id="@+id/references_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"/>

    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_reference_list_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_reference_list_text"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <include layout="@layout/plus_button"/>

    <RelativeLayout
        android:id="@+id/selection_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:alpha="0"
        android:background="@color/easy_reference_red">

        <TextView
            style="@style/ReferenceTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book"
            android:translationY="-64dp"/>

        <TextView
            style="@style/ReferenceTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journal"
            android:translationX="82dp"/>

        <TextView
            style="@style/ReferenceTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chapter"
            android:translationY="64dp"/>

        <TextView
            style="@style/ReferenceTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web"
            android:translationX="-82dp"/>
    </RelativeLayout>
</RelativeLayout>