<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.au.easyreference.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".utils.ERApplication">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ReferenceListActivity"
            android:label="@string/reference_list">
        </activity>

        <activity android:name=".activities.ContainerActivity"/>

        <activity android:name=".activities.apaactivities.APABookReferenceActivity"
            android:label="@string/book"/>
        <activity android:name=".activities.apaactivities.APAJournalReferenceActivity"
                  android:label="@string/journal"/>
        <activity android:name=".activities.apaactivities.APABookChapterReferenceActivity"
                  android:label="@string/book_chapter"/>
        <activity android:name=".activities.apaactivities.APAWebPageReferenceActivity"
                  android:label="@string/web_page_or_document"/>
    </application>
</manifest>
